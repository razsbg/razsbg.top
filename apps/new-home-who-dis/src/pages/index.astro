---
import CountdownTimer from "../components/CountdownTimer.astro"
import { EmojiIcon } from "@repo/ui"
import translations from "../data/translations.json"

const partyDate = "2025-11-08T15:00:00+02:00" // November 8, 3 PM, Ia»ôi time (GMT+2)
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{translations.meta.title}</title>
    <meta name="description" content={translations.meta.description} />
  </head>
  <body>
    <main class="container">
      <header class="header">
        <h1 class="title">
          <span class="brand flex align-top justify-center">
            {translations.header.brand}
          </span>
        </h1>
        <p class="subtitle">{translations.header.subtitle}</p>
      </header>

      <section class="hero">
        <div class="countdown-section">
          <h2 class="countdown-title">{translations.countdown.title}</h2>
          <CountdownTimer
            targetDate={partyDate}
            translations={translations.countdown}
          />
        </div>

        <div class="teaser-content">
          <div class="coming-soon">
            <h3>
              <EmojiIcon value="üö®" label="warning" />
              {translations.sections.comingSoon.title}
              <EmojiIcon value="üö®" label="warning" />
            </h3>
            <p>
              {translations.sections.comingSoon.description}
            </p>
          </div>

          <div class="party-details">
            <h3>
              <EmojiIcon value="üéâ" label="celebration" />
              {translations.sections.partyDetails.title}
              <EmojiIcon value="üéâ" label="celebration" />
            </h3>
            <ul class="details-list">
              {
                translations.sections.partyDetails.items.map(item => (
                  <li>
                    <EmojiIcon value={item.emoji} label={item.label} />
                    <strong>{item.label}</strong> {item.value}
                  </li>
                ))
              }
            </ul>
          </div>

          <div class="dark-pattern-preview">
            <h3>
              <EmojiIcon value="‚ú®" label="sparkles" />
              {translations.sections.whatToExpect.title}
              <EmojiIcon value="‚ú®" label="sparkles" />
            </h3>
            <div class="features-grid">
              {
                translations.sections.whatToExpect.features.map(feature => (
                  <div class="feature-box">
                    <h4>
                      <EmojiIcon value={feature.emoji} label={feature.title} />{" "}
                      {feature.title}
                    </h4>
                    <p>{feature.description}</p>
                  </div>
                ))
              }
            </div>
          </div>

          <div class="warning">
            <h3>
              <EmojiIcon value="‚ö†Ô∏è" label="warning" />
              {translations.sections.warning.title}
              <EmojiIcon value="‚ö†Ô∏è" label="warning" />
            </h3>
            <p>
              {translations.sections.warning.text}
            </p>
          </div>
        </div>
      </section>

      <footer class="footer">
        <p>
          {translations.footer.message}
        </p>
        <p class="fine-print">
          {translations.footer.finePrint}
        </p>
      </footer>
    </main>
  </body>
</html>

<style is:global>
  :root {
    --brand-red: #ff6b6b;
    --brand-teal: #4ecdc4;
    --brand-purple: #a855f7;
    --brand-orange: #fb923c;
    --text-primary: #111827;
    --text-secondary: #6b7280;
    --bg-primary: #ffffff;
    --bg-secondary: #f9fafb;
  }
</style>

<style>
  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto",
      sans-serif;
    line-height: 1.6;
    color: var(--text-primary);
    background: linear-gradient(
      135deg,
      var(--bg-secondary) 0%,
      var(--bg-primary) 100%
    );
    margin: 0;
    padding: 0;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .title {
    font-size: 3rem;
    font-weight: 900;
    margin: 0;
    background: linear-gradient(45deg, var(--brand-red), var(--brand-teal));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-transform: lowercase;
  }

  .emoji {
    font-size: 2rem;
    vertical-align: super;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin: 0.5rem 0 0 0;
    font-style: italic;
  }

  .hero {
    space-y: 3rem;
  }

  .countdown-section {
    text-align: center;
    margin-bottom: 4rem;
    padding: 2rem;
    background: white;
    border-radius: 16px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .countdown-title {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: 2rem;
  }

  .teaser-content > div {
    margin-bottom: 3rem;
    padding: 2rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }

  .coming-soon h3 {
    color: var(--brand-red);
    font-size: 1.5rem;
    text-align: center;
    margin-bottom: 1rem;
  }

  .coming-soon p {
    text-align: center;
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .party-details h3,
  .dark-pattern-preview h3,
  .warning h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  .details-list {
    list-style: none;
    padding: 0;
    max-width: 600px;
    margin: 0 auto;
  }

  .details-list li {
    padding: 0.5rem 0;
    border-bottom: 1px solid #e5e7eb;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  .feature-box {
    padding: 1.5rem;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    text-align: center;
  }

  .feature-box h4 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: var(--brand-purple);
  }

  .feature-box p {
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .warning {
    background: #fef2f2;
    border: 2px solid #fecaca;
  }

  .warning h3 {
    color: #dc2626;
  }

  .warning p {
    text-align: center;
    font-size: 0.95rem;
    color: #991b1b;
  }

  .footer {
    text-align: center;
    margin-top: 4rem;
    padding: 2rem 0;
    border-top: 1px solid #e5e7eb;
  }

  .footer p {
    color: var(--text-secondary);
    margin: 0.5rem 0;
  }

  .fine-print {
    font-size: 0.8rem;
    font-style: italic;
  }

  @media (max-width: 640px) {
    .container {
      padding: 1rem;
    }

    .title {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .teaser-content > div {
      padding: 1.5rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

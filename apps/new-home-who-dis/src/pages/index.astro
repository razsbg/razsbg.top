---
import CountdownTimer from "../components/CountdownTimer.astro"
import { EmojiIcon } from "@repo/ui"
import translations from "../data/translations.json"

const partyDate = "2025-11-08T15:00:00+02:00" // November 8, 3 PM, Ia»ôi time (GMT+2)
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{translations.meta.title}</title>
    <meta name="description" content={translations.meta.description} />
  </head>
  <body class="bg-bg-dark">
    <main class="max-w-4xl mx-auto px-6 pt-12 md:pt-16">
      <header class="header">
        <h1 class="font-display font-bold tracking-tight text-4xl md:text-5xl lg:text-6xl text-center mb-0">
          <span class="brand-logo inline-flex items-baseline justify-center">
            <span class="fade-in-up text-brand-primary" style="animation-delay: 0ms">new-</span><span class="fade-in-up text-text-primary" style="animation-delay: 100ms">home-</span><span class="fade-in-up text-text-secondary" style="animation-delay: 200ms">who-</span><span class="fade-in-up bg-gradient-to-r from-brand-primary to-brand-accent bg-clip-text text-transparent animate-gradient-shift" style="animation-delay: 300ms">dis</span><span class="fade-in-up text-brand-accent animate-wiggle" style="animation-delay: 400ms">‚Ñ¢</span>
          </span>
        </h1>
        <p class="font-display italic text-lg md:text-xl text-text-secondary mt-2 mb-12 text-center">{translations.header.subtitle}</p>
      </header>

      <section class="hero">
        <div class="mb-16">
          <CountdownTimer
            targetDate={partyDate}
            translations={translations.countdown}
          />
        </div>

        <div class="teaser-content">
          <div class="coming-soon mt-16 md:mt-20 bg-gradient-to-b from-transparent to-bg-card/50 py-16 md:py-20 opacity-0 animate-fade-in-up">
            <div class="max-w-3xl mx-auto px-6 text-center">
              <h3 class="font-display text-3xl md:text-4xl font-bold text-brand-primary tracking-wide mb-6 animate-pulse-slow">
                <EmojiIcon value="üö®" label="warning" className="w-6 h-6 inline animate-wiggle" />
                {" "}{translations.sections.comingSoon.title}{" "}
                <EmojiIcon value="üö®" label="warning" className="w-6 h-6 inline animate-wiggle" />
              </h3>
              <p class="text-text-primary font-sans text-lg md:text-xl leading-relaxed">
                The most aggressive, satirical, and utterly ridiculous gift registry experience is coming to ruin your <em class="text-brand-accent">peaceful shopping experience</em>.
              </p>
              <p class="text-sm text-text-secondary/80 italic mt-4">
                No actual data will be harvested. Promises not legally binding. ü§û
              </p>
            </div>
          </div>

          <div class="party-details-section">
            <h3 class="font-display text-3xl font-bold text-text-primary text-center mb-8 md:mb-12">
              <EmojiIcon value="üéâ" label="celebration" className="w-6 h-6 inline" />
              {" "}{translations.sections.partyDetails.title}{" "}
              <EmojiIcon value="üéâ" label="celebration" className="w-6 h-6 inline" />
            </h3>
            <div class="party-details-container bg-bg-card border border-brand-secondary/20 rounded-2xl p-8 md:p-10 max-w-2xl mx-auto shadow-xl card-hover">
              <div class="space-y-6">
                {
                  translations.sections.partyDetails.items.map((item, index) => {
                    const delays = ['0ms', '100ms', '200ms', '300ms', '400ms', '500ms'];
                    
                    // Parse special formatting for specific items
                    let valueContent;
                    if (item.label === "Time:") {
                      // Special formatting for "sharp"
                      const parts = item.value.split("(sharp)");
                      valueContent = (
                        <>
                          {parts[0]}
                          <span class="text-brand-accent font-semibold">(sharp)</span>
                          {parts[1] || ''}
                        </>
                      );
                    } else if (item.label === "Gifts:") {
                      // Wishlist pills
                      valueContent = (
                        <>
                          Three wishlists{" "}
                          <span class="bg-bg-dark px-3 py-1 rounded-full text-sm inline-block mr-2 hover:bg-brand-primary/20 transition-colors">Traditional</span>
                          <span class="bg-bg-dark px-3 py-1 rounded-full text-sm inline-block mr-2 hover:bg-brand-primary/20 transition-colors">Receipt</span>
                          <span class="bg-bg-dark px-3 py-1 rounded-full text-sm inline-block hover:bg-brand-primary/20 transition-colors">Bandcamp</span>
                        </>
                      );
                    } else {
                      valueContent = item.value;
                    }
                    
                    return (
                      <div 
                        class="party-detail-item flex items-start gap-4 opacity-0 animate-slide-in-left"
                        style={`animation-delay: ${delays[index]}`}
                      >
                        <EmojiIcon value={item.emoji} label={item.label} className="w-6 h-6 flex-shrink-0 mt-1 party-detail-icon" />
                        <div class="flex-1">
                          <div class="font-display text-lg font-semibold text-text-primary mb-1">
                            {item.label}
                          </div>
                          <div class="font-sans text-base text-text-secondary leading-relaxed">
                            {valueContent}
                          </div>
                        </div>
                      </div>
                    );
                  })
                }
              </div>
            </div>
          </div>

          <div class="dark-pattern-preview">
            <h3 class="font-display text-3xl font-bold text-text-primary text-center mb-8 md:mb-12">
              <EmojiIcon value="‚ú®" label="sparkles" className="w-6 h-6 inline" />
              {" "}{translations.sections.whatToExpect.title}{" "}
              <EmojiIcon value="‚ú®" label="sparkles" className="w-6 h-6 inline" />
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto px-6">
              {
                translations.sections.whatToExpect.features.map((feature, index) => {
                  // Map tier colors to each feature
                  const tierColors = ['text-brand-primary', 'text-gold-tier', 'text-brand-secondary', 'text-ultra-tier'];
                  const delays = ['0ms', '50ms', '100ms', '150ms'];
                  
                  return (
                    <div 
                      class="feature-card bg-bg-card border border-white/5 rounded-xl p-6 shadow-lg card-hover hover:scale-[1.02] opacity-0 animate-fade-in-up"
                      style={`animation-delay: ${delays[index]}`}
                    >
                      <div class="feature-icon-wrapper">
                        <EmojiIcon value={feature.emoji} label={feature.title} className="w-6 h-6 mb-3" />
                      </div>
                      <h4 class={`font-display text-xl font-semibold mb-2 ${tierColors[index]}`}>
                        {feature.title}
                      </h4>
                      <p class="font-sans text-sm md:text-base text-text-secondary leading-relaxed">
                        {feature.description}
                      </p>
                    </div>
                  );
                })
              }
            </div>
          </div>

          <div class="warning-banner bg-bg-card border-2 border-brand-primary rounded-xl p-6 md:p-8 max-w-3xl mx-auto my-12 opacity-0 animate-fade-in-up card-hover">
            <div class="flex items-center justify-center gap-2 mb-4">
              <EmojiIcon value="‚ö†Ô∏è" label="warning" />
              <h3 class="text-brand-primary font-display text-2xl md:text-3xl font-bold m-0">
                {translations.sections.warning.title}
              </h3>
              <EmojiIcon value="‚ö†Ô∏è" label="warning" />
            </div>
            <p class="text-text-primary font-sans text-base md:text-lg leading-relaxed text-center">
              This website contains satirical <span class="keyword">dark patterns</span>, aggressive UX, and functional gift commitment systems. Side effects may include excessive shopping, <span class="keyword">competitive anxiety</span>, and <span class="keyword">uncontrollable laughter</span>. Consult your wallet before use.
            </p>
            <p class="italic text-sm text-text-secondary/80 mt-4 text-center">
              Powered by questionable UX decisions and Romanian hospitality ‚Ñ¢Ô∏è
            </p>
          </div>
        </div>
      </section>

      <footer role="contentinfo" class="bg-bg-dark border-t border-white/10 py-8 mt-auto">
        <div class="max-w-4xl mx-auto px-6">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8 items-center">
            <!-- Column 1: Branding -->
            <div class="text-center md:text-left">
              <div class="text-sm font-display font-semibold">
                <span class="text-brand-primary">new-</span><span class="text-text-primary">home-</span><span class="text-text-secondary">who-</span><span class="bg-gradient-to-r from-brand-primary to-brand-accent bg-clip-text text-transparent">dis</span><span class="text-brand-accent">‚Ñ¢Ô∏è</span>
              </div>
              <p class="text-xs text-text-secondary mt-1">Experience-driven housewarming</p>
            </div>

            <!-- Column 2: Essential Info -->
            <div class="text-center">
              <p class="text-xs text-text-secondary">Ia»ôi, Romania ‚Ä¢ November 8, 2025</p>
            </div>

            <!-- Column 3: Meta -->
            <div class="text-center md:text-right">
              <p class="text-xs text-text-secondary">¬© 2025 new-home-who-dis‚Ñ¢Ô∏è</p>
              <p class="text-xs text-text-secondary/60 mt-1 italic">Built with love and dark patterns üíÄ</p>
            </div>
          </div>
        </div>
      </footer>
    </main>
  </body>
</html>

<style is:global>
  :root {
    --brand-red: #ff6b6b;
    --brand-teal: #4ecdc4;
    --brand-purple: #a855f7;
    --brand-orange: #fb923c;
    --text-primary: #111827;
    --text-secondary: #6b7280;
    --bg-primary: #ffffff;
    --bg-secondary: #f9fafb;
  }

  .text-glow {
    text-shadow: 0 0 20px rgba(255, 61, 113, 0.6);
  }

  .card-hover {
    @apply transition-all duration-300 ease-out;
  }

  .card-hover:hover {
    @apply -translate-y-1 shadow-2xl;
  }

  .spring-bounce {
    transition-timing-function: cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }
</style>

<style>
  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto",
      sans-serif;
    line-height: 1.6;
    margin: 0;
    padding: 0;
  }

  .emoji {
    font-size: 2rem;
    vertical-align: super;
  }

  /* Fade-in-up animation for logo segments */
  .fade-in-up {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .animate-fade-in-up {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Gradient shift animation for "dis" */
  @keyframes gradient-shift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .animate-gradient-shift {
    background-size: 200% 200%;
    animation: gradient-shift 3s ease infinite;
  }

  .hero {
    space-y: 3rem;
  }

  .teaser-content > div:not(.party-details-section):not(.coming-soon) {
    margin-bottom: 3rem;
    padding: 2rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }

  .party-details-section {
    margin-bottom: 3rem;
  }

  /* Party details section animations */
  .animate-slide-in-left {
    animation: slideInLeft 0.6s ease-out forwards;
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Icon hover effect */
  .party-detail-item:hover .party-detail-icon {
    animation: icon-scale 0.3s ease;
  }

  @keyframes icon-scale {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  /* Feature card icon bounce on hover */
  .feature-card:hover .feature-icon-wrapper {
    animation: icon-bounce 0.5s ease;
  }

  @keyframes icon-bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-2px);
    }
  }

  /* Warning banner animations */
  .warning-banner {
    animation: border-pulse 3s ease-in-out infinite, fadeInUp 0.8s ease-out forwards;
    animation-delay: 0s, 0s;
  }

  @keyframes border-pulse {
    0%, 100% {
      border-color: #FF3D71; /* brand-primary */
    }
    50% {
      border-color: #FFE66D; /* brand-accent */
    }
  }

  /* Keyword highlighting with hover effect */
  .keyword {
    color: rgba(255, 61, 113, 0.8); /* brand-primary with 80% opacity */
    font-weight: 600;
    cursor: default;
    transition: all 0.3s ease;
  }

  .keyword:hover {
    color: #FF3D71; /* brand-primary full opacity */
    text-shadow: 0 0 8px rgba(255, 61, 113, 0.5);
  }

  @media (max-width: 640px) {
    .container {
      padding: 1rem;
    }

    .title {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .teaser-content > div {
      padding: 1.5rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

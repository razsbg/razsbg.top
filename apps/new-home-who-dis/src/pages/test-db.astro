---
// Test page to verify database connection
import { db } from "../db/index"
import { gifts } from "../db/schema"

// Fetch gifts server-side
let giftCount = 0
let traditionalCount = 0
let receiptCount = 0
let bandcampCount = 0
let error: string | null = null

try {
  const allGifts = await db.select().from(gifts)
  giftCount = allGifts.length
  
  traditionalCount = allGifts.filter(g => g.wishlistType === 'traditional').length
  receiptCount = allGifts.filter(g => g.wishlistType === 'receipt').length
  bandcampCount = allGifts.filter(g => g.wishlistType === 'bandcamp').length
} catch (e) {
  error = e instanceof Error ? e.message : 'Unknown error'
  console.error('Database connection error:', e)
}

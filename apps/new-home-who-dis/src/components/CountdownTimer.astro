---
import CountdownClient from "./CountdownClient.jsx"

interface Props {
  targetDate: string
  translations: {
    title: string
    labels: {
      days: string
      hours: string
      minutes: string
      seconds: string
    }
    completed: string
  }
}
const { targetDate, translations } = Astro.props
---

<div
  class="relative bg-bg-card border border-brand-primary/20 animate-pulse-glow rounded-2xl p-8 md:p-12 shadow-2xl"
>
  <h3
    class="font-display text-2xl md:text-3xl text-text-primary font-semibold mb-8 text-center"
  >
    {translations.title}
  </h3>

  <CountdownClient
    targetDate={targetDate}
    translations={translations}
    client:load
  />
</div>

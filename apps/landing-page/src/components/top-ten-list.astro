<style>
  ol {
    counter-reset: top-ten;
  }

  ol > li > a::after {
    content: counter(top-ten, decimal-leading-zero);
    counter-increment: top-ten;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 2ch;
    color: rgb(254 243 199 / 0.85);
    font-size: 1.15em;
    font-weight: 500;
  }

  @media only screen and (min-width: 1024px) {
    ol li > a::after {
      content: "#";
    }

    ol:hover > li > a::after {
      content: counter(top-ten, decimal-leading-zero);
      counter-increment: top-ten;
    }

    ol > li:hover > a::after {
      color: rgb(20 184 166);
    }
  }
</style>


---
import TopTenList from "../components/top-ten-list.astro"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap"
      rel="stylesheet"
    />

    <title>razsbg.top - let's explore music together</title>

    <style>
      @import url("../styles.css");

      body {
        grid-template-rows: auto 1fr auto;
        position: relative;
        background-image: url("../assets/stay-tuned-bg.jpg");
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
      }

      body::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.3);
        z-index: -1;
      }
    </style>
  </head>
  <body class="h-screen grid text-zinc-50">
    <header class="p-5 text-center">
      <h1 class="text-4xl lg:text-5xl font-semibold">Stay tuned üõ∏</h1>
    </header>
    <main class="px-5 sm:px-0 self-center justify-self-center">
      <header class="mb-6">
        <h3
          class="border-b-2 border-current uppercase text-2xl sm:text-3xl lg:text-4xl font-medium text-teal-500 lg:hover:text-inherit"
        >
          <a
            target="_blank"
            rel="noopener noreferer"
            href="https://open.spotify.com/playlist/4tMMBLlu6cxLRyDe1Gm9c6?si=e5e108e63dbf4a4d"
            >lust üîó</a
          >
        </h3>
        <h2
          class="px-1 sm:px-0.5 text-right text-xl sm:text-2xl lg:text-3xl font-semibold"
        >
          Top 10 picks <span class="inline-block ml-2 text-[1.15em]">ü§è</span>
        </h2>
      </header>
